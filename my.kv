WindowManager:
    TitleWindow:
    FixedWindow:
    PinWindow:
    OutputWindow:

<FixedWindow>:
    name: "fixed"

    #canvas.before:
        #Color:
            #rgba: (1,1,1,1)
        #Rectangle:
            #pos: self.pos
            #size: self.size 

    FloatLayout:
        Button:
            size_hint: 1, 0.3
            pos_hint: {"center_x": 0.5, "top": 0.9 }
            background_normal: 'fixed-free.jpg'
            background_down: 'fixed-free.jpg'

        GridLayout:
            size_hint: 1, 0.5
            pos_hint: {"center_x": 0.5, "bottom": 0.1}

            cols: 1
            rows: 2 

            GridLayout:
                cols: 4
                rows: 1

                Button:
                    text: "Load Type"

                Button:
                    id: distributed
                    text: "distributed"
                    on_press: root.distributed()

                Button:
                    id: point
                    text: "point"
                    on_press: root.point()
                Button:
                    id: moment
                    text: "moment"
                    on_press: root.moment()


            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "title"
                    root.manager.transition.direction = "right"


<TitleWindow>:
    name: "title"

    FloatLayout:
        Button: 
            text: "CLUELESS.INC"
            font_size: self.width/20
            size_hint: 1, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9 }

        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.7 }

            background_normal: 'fixed-free.jpg'
            background_down: 'fixed-free.jpg'

            on_release:
                app.root.current = "fixed"
                root.manager.transition.direction = "left"        
                    

        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.35 }

            background_normal: 'pin-roller.jpg'
            background_down: 'pin-roller.jpg'

            on_release:
                app.root.current = "pin"
                root.manager.transition.direction = "left"



    


<PinWindow>:
    name: "pin"

    GridLayout:
        cols: 1 
        rows: 2 

        Button: 
            text: "pin"

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "title"
                root.manager.transition.direction = "right"



    