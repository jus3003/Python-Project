WindowManager:
    ConnectionWindow:
    VariablesWindow:
    OutputWindow:

<ConnectionWindow>:
    name: "connection"
    id: connection

    FloatLayout:
        Button: 
            text: "CLUELESS.INC"
            font_size: self.width/20
            size_hint: 1, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9 }

        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.7 }
            text: "Fixed-Free" 

            background_normal: 'fixed-free.jpg'
            background_down: 'fixed-free.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"
                root.manager.connection = self.text
                on_release: root.connection_fixed()       
                    
        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.35 }
            text: "Pin-Roller"

            background_normal: 'pin-roller.jpg'
            background_down: 'pin-roller.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"
                root.manager.connection = self.text
                on_release: root.connection_pin()      

<VariablesWindow>:
    name: "variables"
    id: variables

    FloatLayout:
        
        GridLayout:
            size_hint: 1, 0.2
            pos_hint: {"center_x": 0.5, "top": 0.95 }
            cols: 1
            rows: 1

            Button:
                text: "insert diagram of connection chosen"   

        GridLayout:
            size_hint: 1, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.7}
            cols: 1
            rows: 2

            GridLayout:
                cols: 4
                rows: 1

                Button:
                    text: root.manager.load

                Button:
                    id: distributed
                    text: "distributed"
                    on_press: root.load_type = self.text
                    on_press: root.load_distributed()
                    on_release: root.manager.current = "output"
                    #on_release: load_click()
                    
                Button:
                    id: point
                    text: "point"
                    on_press: root.load_type = self.text
                    on_press: root.load_point()
                    on_release: root.manager.current = "output"
                Button:
                    id: moment
                    text: "moment"
                    on_press: root.load_type = self.text
                    on_press: root.load_moment()
                    on_release: root.manager.current = "output"

        GridLayout:
            size_hint: 0.7, 0.5
            pos_hint: {"right": 1}
            cols: 2
            rows: 3

            Label:
                text: "a"
            TextInput:
                id: a_value

            Label:
                text: "b"
            TextInput:
                id: b_value

            Button: 
                text: "Save Data"
                on_release: root.save_data()

        Button:
            size_hint: 0.2, 0.1
            pos_hint: {"left": 1, "bottom": 0}
            text: "Go Back"
            on_release:
                app.root.current = "connection"
                root.manager.transition.direction = "right"


<OutputWindow>:
    name: "output"
    id: output

    GridLayout: 
        size_hint: 1, 0.5
        pos_hint: {"center_x": 0.5, "bottom": 0.5}
        rows: 2
        cols: 1

        Button:
            text: root.manager.connection

        Button: 
            text: "Go Back" 
            on_release: 
                app.root.current = "variables"
                root.manager.transition.direction = "left"

 