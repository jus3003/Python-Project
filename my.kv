WindowManager:
    ConnectionWindow:
    VariablesWindow:
    PinWindow:
    OutputWindow:

<ConnectionWindow>:
    name: "connection"
    id: connection

    FloatLayout:
        Button: 
            text: "CLUELESS.INC"
            font_size: self.width/20
            size_hint: 1, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9 }

        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.7 }

            background_normal: 'fixed-free.jpg'
            background_down: 'fixed-free.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"        
                    

        Button:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.35 }

            background_normal: 'pin-roller.jpg'
            background_down: 'pin-roller.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"

<VariablesWindow>:
    name: "variables"
    id: variables

    FloatLayout:
        
        GridLayout:
            size_hint: 1, 0.3
            pos_hint: {"center_x": 0.5, "top": 0.9 }
            cols: 1
            rows: 1

            Button:
                text: "insert diagram of connection chosen"   

        GridLayout:
            size_hint: 1, 0.5
            pos_hint: {"center_x": 0.5, "bottom": 0.1}
            cols: 1
            rows: 2

            GridLayout:
                cols: 4
                rows: 1

                Button:
                    text: root.manager.load

                Button:
                    id: distributed
                    text: "distributed"
                    on_press: root.manager.load = self.text
                    #on_press: root.manager.current = "title"
                Button:
                    id: point
                    text: "point"
                    on_press: root.manager.load = self.text
                Button:
                    id: moment
                    text: "moment"
                    on_press: root.manager.load = self.text

            Button:
                text: "Go Back"
                on_release:
                    app.root.current = "connection"
                    root.manager.transition.direction = "right"





<OutputWindow>:
    name: "output"
    id: output

    GridLayout: 
        row: 1
        col: 1

        Button:
            text: "Output Window"



<PinWindow>:
    name: "pin"

    GridLayout:
        cols: 1 
        rows: 2 

        Button: 
            text: "pin"

        Button:
            text: "Go Back"
            on_release:
                app.root.current = "title"
                root.manager.transition.direction = "right"



    