WindowManager:
    ConnectionWindow:
    VariablesWindow:
    OutputWindow:
    Matplotlib:
    Experiment:

<ConnectionWindow>:
    name: "connection"
    id: connection

    FloatLayout:
        Button: 
            text: "CLUELESS.INC"
            font_size: self.width/20
            size_hint: 1, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9 }

        ToggleButton:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.7 }
            #text: "Fixed-Free" 

            background_normal: 'fixed-free.jpg'
            background_down: 'fixed-free.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"
                #root.manager.connection = self.text
                #root.manager.connection = "fixed"
                root.manager.connection = 'fixed-free-diagram.jpg'
                on_release: root.connection_fixed()       
                    
        ToggleButton:
            size_hint: 0.7, 0.25
            pos_hint: {"center_x": 0.5, "top": 0.35 }
            #text: "Pin-Roller"

            background_normal: 'pin-roller.jpg'
            background_down: 'pin-roller.jpg'

            on_release:
                app.root.current = "variables"
                root.manager.transition.direction = "left"
                #root.manager.connection = self.text
                #root.manager.connection = "pin"
                root.manager.connection = 'pin-roller-diagram.jpg'
                on_release: root.connection_pin()      

<VariablesWindow>:
    name: "variables"
    id: variables

    FloatLayout:
        
        GridLayout:
            size_hint: 1, 0.3
            pos_hint: {"center_x": 0.5, "top": 0.95 }
            cols: 1
            rows: 1

            #Button:
                #background_normal: 'pin-roller.jpg'
                #background_down: 'pin-roller.jpg'   

            Image:
                source: root.manager.connection
                allow_stretch: True
                keep_ratio: True

        GridLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.5, "top": 0.6}
            cols: 3
            rows: 1
            spacing: [5,0]

            #Button:
                #text: root.manager.load

            ToggleButton:
                id: distributed
                text: "Distributed Load (N/m)"
                group: 'load_buttons'
                on_press: root.manager.load = self.text
                on_press: root.load_distributed()                   
                    
            ToggleButton:
                id: point
                text: "Point Load (N)"
                group: 'load_buttons'
                on_press: root.manager.load = self.text
                on_press: root.load_point()
    
            ToggleButton:
                id: moment
                text: "Moment (N x m)"
                group: 'load_buttons'
                on_press: root.manager.load = self.text
                on_press: root.load_moment()

        GridLayout:
            size_hint: 0.8, 0.07
            pos_hint: {"center_x": 0.5, "top": 0.5}
            cols: 5
            rows: 1
            spacing: [5,0]

            #Button:
                #text: root.manager.mat

            ToggleButton:
                id: wood
                text: "Wood"
                group: 'material_buttons'
                on_press: root.manager.mat = self.text
                on_press: root.mat_wood()        
                    
            ToggleButton:
                id: steel
                text: "Steel"
                group: 'material_buttons'
                on_press: root.manager.mat = self.text
                on_press: root.mat_steel()

            ToggleButton:
                id: aluminum
                text: "Aluminum"
                group: 'material_buttons'
                on_press: root.manager.mat = self.text
                on_press: root.mat_aluminum()

            ToggleButton:
                id: concrete
                text: "Concrete"
                group: 'material_buttons'
                on_press: root.manager.mat = self.text
                on_press: root.mat_concrete()

            ToggleButton:
                id: plastic
                text: "Plastic"
                group: 'material_buttons'
                on_press: root.manager.mat = self.text
                on_press: root.mat_plastic()

        FloatLayout:
            id: container

            GridLayout:
                cols: 1
                size_hint: 0.2, 0.2
                pos_hint: {"x": 0.25, "top": 0.35}

                Label:
                    text: "Load Magnitude"
                Label:
                    text: "Load Location A (m)"            
                Label:
                    text: "Beam Base (m)"
                Label:
                    text: "Beam Height (m)"
                Label:
                    text: "Beam Length (m)"            

            GridLayout:
                cols: 1
                size_hint: 0.35, 0.2
                pos_hint: {"x": 0.45, "top": 0.35 }

                TextInput:
                    id: load_value
                    multiline: False
                    input_filter: 'float'
                TextInput:
                    id: a_value
                    multiline: False
                    input_filter: 'float'
                TextInput:
                    id: b_value
                    multiline: False
                    input_filter: 'float'
                TextInput:
                    id: h_value
                    multiline: False
                    input_filter: 'float'
                TextInput:
                    id: l_value
                    multiline: False
                    input_filter: 'float'

            #Label:
                #text: "R"
            #TextInput:
                #id: r_value
                #multiline: False
                #input_filter: 'float'                
                
            #Button: 
                #text: "Save Load/Connection Type"
                #on_release: root.save_load_type()

        GridLayout:
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.1}
            cols: 1
            rows: 1

            Button: 
                text: "Calculate"
                on_press: root.save_variables()
                on_release: root.calculate_variables()
                on_release: root.manager.current = "output"

        Button:
            size_hint: 0.1, 0.1
            pos_hint: {"left": 1, "bottom": 0}
            text: "Go Back"
            on_release:
                app.root.current = "connection"
                root.manager.transition.direction = "right"


<OutputWindow>:
    name: "output"
    id: output



    FloatLayout: 

        Button:
            size_hint: 1, 0.2
            pos_hint: {"top": 1}
            id: error_checker
            text: "Calculation Successful"
            


        #Button: 
            #text: "check output list"
            #on_press: root.output_pass()
        #Button: 
            #text: "Output Results"

        GridLayout:
            size_hint: 1, 0.5
            pos_hint: {"center_y": 0.5}

            rows: 3
            cols: 2

            Label: 
                text: "Left Angle (rad)"
            Button:
                id: angle_left_label
                text: "angle left label"
            Label: 
                text: "Right Angle (rad)"    
            Button:
                id: angle_right_label
                text: "angle right label"
            Label: 
                text: "Deflection (m)"    
            Button:
                id: deflection_label
                text: "deflection label"

        Button: 
            size_hint: 0.1, 0.1
            pos_hint: {"left": 1, "bottom": 0} 
            text: "Go Back" 
            on_release:
                #root.reset_error_message() 
                app.root.current = "variables"
                root.manager.transition.direction = "left"

        Button:
            size_hint: 0.9, 0.1
            pos_hint: {"right": 1, "bottom": 0} 
            text: "Material Information"
            #on_release: root.manager.current = "matplotlib"
            on_release: Factory.MyPopup().open()
            on_release: root.save_plot_data()

